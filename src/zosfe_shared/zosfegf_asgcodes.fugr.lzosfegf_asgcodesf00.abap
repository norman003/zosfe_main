FORM DB_UPD_ZOSFEVA_ASGCODES .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZOSFEVA_ASGCODES.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZOSFEVA_ASGCODES-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZOSFETB_ASGCODES WHERE
  WERKS = ZOSFEVA_ASGCODES-WERKS .
    IF SY-SUBRC = 0.
    DELETE ZOSFETB_ASGCODES .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZOSFETB_ASGCODES WHERE
  WERKS = ZOSFEVA_ASGCODES-WERKS .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZOSFETB_ASGCODES.
    ENDIF.
ZOSFETB_ASGCODES-MANDT =
ZOSFEVA_ASGCODES-MANDT .
ZOSFETB_ASGCODES-WERKS =
ZOSFEVA_ASGCODES-WERKS .
ZOSFETB_ASGCODES-ZZ_CODIGO_SUNAT =
ZOSFEVA_ASGCODES-ZZ_CODIGO_SUNAT .
ZOSFETB_ASGCODES-ZZ_DESC_COD_SUNA =
ZOSFEVA_ASGCODES-ZZ_DESC_COD_SUNA .
    IF SY-SUBRC = 0.
    UPDATE ZOSFETB_ASGCODES .
    ELSE.
    INSERT ZOSFETB_ASGCODES .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_ZOSFEVA_ASGCODES-UPD_FLAG,
STATUS_ZOSFEVA_ASGCODES-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
