FORM GET_DATA_ZOSFEVA_ASGTNHR.
  PERFORM VIM_FILL_WHERETAB.
*.read data from database.............................................*
  REFRESH TOTAL.
  CLEAR   TOTAL.
  SELECT * FROM ZOSFETB_ASGTNHR WHERE
(VIM_WHERETAB) .
    CLEAR ZOSFEVA_ASGTNHR .
ZOSFEVA_ASGTNHR-MANDT =
ZOSFETB_ASGTNHR-MANDT .
ZOSFEVA_ASGTNHR-TAXTYPE =
ZOSFETB_ASGTNHR-TAXTYPE .
ZOSFEVA_ASGTNHR-STCDT =
ZOSFETB_ASGTNHR-STCDT .
<VIM_TOTAL_STRUC> = ZOSFEVA_ASGTNHR.
    APPEND TOTAL.
  ENDSELECT.
  SORT TOTAL BY <VIM_XTOTAL_KEY>.
  <STATUS>-ALR_SORTED = 'R'.
*.check dynamic selectoptions (not in DDIC)...........................*
  IF X_HEADER-SELECTION NE SPACE.
    PERFORM CHECK_DYNAMIC_SELECT_OPTIONS.
  ELSEIF X_HEADER-DELMDTFLAG NE SPACE.
    PERFORM BUILD_MAINKEY_TAB.
  ENDIF.
  REFRESH EXTRACT.
ENDFORM.
