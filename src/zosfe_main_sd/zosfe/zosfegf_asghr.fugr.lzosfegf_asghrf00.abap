FORM DB_UPD_ZOSFEVA_ASGTNHR .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZOSFEVA_ASGTNHR.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZOSFEVA_ASGTNHR-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZOSFETB_ASGTNHR WHERE
  TAXTYPE = ZOSFEVA_ASGTNHR-TAXTYPE .
    IF SY-SUBRC = 0.
    DELETE ZOSFETB_ASGTNHR .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZOSFETB_ASGTNHR WHERE
  TAXTYPE = ZOSFEVA_ASGTNHR-TAXTYPE .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZOSFETB_ASGTNHR.
    ENDIF.
ZOSFETB_ASGTNHR-MANDT =
ZOSFEVA_ASGTNHR-MANDT .
ZOSFETB_ASGTNHR-TAXTYPE =
ZOSFEVA_ASGTNHR-TAXTYPE .
ZOSFETB_ASGTNHR-STCDT =
ZOSFEVA_ASGTNHR-STCDT .
    IF SY-SUBRC = 0.
    UPDATE ZOSFETB_ASGTNHR .
    ELSE.
    INSERT ZOSFETB_ASGTNHR .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_ZOSFEVA_ASGTNHR-UPD_FLAG,
STATUS_ZOSFEVA_ASGTNHR-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
